<body style=" background-image: url(<%= asset_path 'index.jpg' =%>);background-size: cover;">

<nav class="navbar">
      <div class="btn-group", style=" margin-top:-3%;width: 300px; padding-top: 3%;">
         <%= link_to omniauth_authorize_path(resource_name, :facebook), class:"btn btn-social-icon btn-facebook" do %>
           <i class="fa fa-facebook fa-fw"></i><span>    Login with Facebook</span>
          <% end %>
      </div> 
  </nav>        
  
  <div class="container">
   <h1 class="font-weight-light">Motorshelves: speed is at hand </h1>
  
   <p class="lead">Find your ride</p>

  <br>
    
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="col-6 mb-3 mx-auto">
          <%= f.label :email, class:"field form-label", style:"color: aliceblue;"%>
          <%= f.email_field :email, autofocus: true,  class:"form-control", required: true, placeholder:"john.smith@provider.com"%>
        </div>
        <div class="col-6 mb-3 mx-auto">
          <%= f.label :password, class:"field form-label", style:"color: aliceblue;" %>
          <%= f.password_field :password, class:"form-control", required: true, placeholder:"Type in your password..."%>
        </div>
        <br>
        <div class="d-grid gap-2 col-3 mx-auto">
          <%= f.submit "Log in", class:"actions btn btn-primary", 
          style:"
          border:2px solid rgba(0,0,0,0.2);
          border-radius:12px;;
          background-color: red;
          border-bottom-color:black;
          background-image: linear-gradient( rgb(176,196, 222,), rgb(176,196, 222,) 45%, rgb(0, 0, 0) 51%, rgb(0, 0, 0));
          text-decoration: none;
          color:lavender;
          font-size: medium;" %>
          <%= link_to "Sign up", new_registration_path(resource_name), role:"button", class:"btn btn-secondary",
            style:"border:2px solid brown;
            border-radius:12px;background-color: rgb(75, 22, 22);; border-color: brown;" %>
        </div>
      <% end %>
    </div>
  <br>
  <footer class="text-center text-lg-start" style="color: aliceblue;">
      <div class="container p-4">
          <div class="row">
              <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                  <h5 class="text-uppercase">Get to know us</h5>
                  <p>
                      Created by <a href="https://github.com/Eleonora99" style="color: aliceblue;">E</a>&<a
                          href="https://github.com/Elisableah" style="color: aliceblue;">E</a>
                  </p>
              </div>
              <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                  <h5 class="text-uppercase">Need Help?</h5>
                  <p>
                      You can contact us via <a
                          href="mailto:fornaro.1836820@studenti.uniroma1.it,getachew.1794877@studenti.uniroma1.it"
                          style="color: aliceblue;">E-mail</a>.
                  </p>
              </div>
          </div>
      </div>
  </footer>
</body>

